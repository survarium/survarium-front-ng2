@import "../../components.common/variables.styl"

.level
  color rgba(245,245,245,0.65)

:host
  display block

:host > a
  display block
  text-decoration none

:host.premium .level
  color $highlight

:host.rare .level
  color #F8FF22

:host.mods_1 .name
  color #05b223

:host.mods_2 .name
  color #35A8FF

:host.mods_3 .name
  color #ff9900

:host.micro
  .name
    display none
  img
    margin-top 20px
    max-width 40px !important

:host.thin
  font-size 14px
  text-align center
  .name
    font-size 1em
    .level
      display none
  dl
    display none

  img
    max-width 80px

.desc
  font-size .8em
  padding .5em 0

.name
  font-size 1.2em
  margin-top 0
  .level
    float right
    font-size .6em
    line-height 2.44em
    font-weight 400

dt
  display inline-block
  &::after
    content ': '

dd
  margin-left 0
  display inline-block
