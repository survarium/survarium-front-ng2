:host
  display block

  & /deep/
    badge
      display inline-block
      vertical-align top
      padding .3em .5em
      margin .3em .5em
      border 1px solid rgba(200, 200, 200, .3)
      color rgba(200, 200, 200, .5)
      font-size .8em

    &:first-of-type
      margin-left 0

    .cheater
      border-color rgba(255, 0, 0, 1)
      color rgba(255, 0, 0, 1)

