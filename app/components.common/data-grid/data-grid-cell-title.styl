:host
  font-weight 700

  &.nowrap
    white-space nowrap

  &.sort
    cursor pointer
    position relative
    padding-right 1.35em

    &::after
      position absolute
      right .1em
      top 50%
      margin-top -.66em
      content '\21C5'
      line-height 1.33em

    &_asc
    &_desc
      color #fff

    &_asc
      &::after
        content '\2191'

    &_desc
      &::after
        content '\2193'
