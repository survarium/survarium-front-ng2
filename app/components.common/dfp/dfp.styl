:host
  display block
  padding-bottom 2em

:host.empty
  display none

.dfp
  display block

  background-color #2a333e
  position relative
  z-index 1

  .preloader
    position absolute
    text-align center
    z-index -1
    display table
    width 100% !important
    & > span
      display table-cell
      vertical-align middle

  &__container
    margin 0 auto

  &__container,
  .preloader
    @media (max-width: 319px)
      width 234px
      height 60px
    @media (min-width: 320px)
      width 320px
      height 50px
    @media (min-width: 468px)
      width 468px
      height 60px
    @media (min-width: 728px)
      width 728px
      height 90px
    @media (min-width: 970px)
      width 970px
      height 90px
