.form
  background-color rgba(255, 255, 255, .95)
  padding 20px 20px 5px 20px
  margin 2px 3px 4px
  width 444px
  box-sizing border-box
  color #000
  font-size .81em

.coin
  > dt,
  > dd
    display inline-block

  > dd
    margin 0
    padding-left 5px

.data-unit {
  margin-bottom: 15px;
}

.data-unit__label {
  width: 145px;
  box-sizing: border-box;
  padding-right: 10px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  display: inline-block;
  vertical-align: top;
}

.data-unit__base {
  box-sizing: border-box;
  width: 255px;
  word-wrap: break-word;
  display: inline-block;
  vertical-align: top;
}

.amount
  .data-unit__label
    padding-top 4px

.paymentType
  .data-unit__label
    padding-top 6px

.radiogroup
  > label
    display inline
    outline none
    border 0
    margin 0 -1px 0 0
    cursor pointer

    &:first-of-type
      > span
        border-top-left-radius 3px
        border-bottom-left-radius 3px

    &:last-of-type
      > span
        border-top-right-radius 3px
        border-bottom-right-radius 3px

    > span
      font-size: 13px;
      line-height: 28px;
      padding 0 .83em
      display inline-block
      border-width: 1px;
      border-style: solid;
      border-color: rgba(0,0,0,.2) rgba(0,0,0,.1) rgba(0,0,0,.2) rgba(0,0,0,.1)

      &:hover
        border-color: rgba(0,0,0,.3);

input[type='radio']
  position absolute
  opacity 0
  cursor pointer

  &:checked ~ span
    background-color #ffeca6

i
  background-size: contain;
  vertical-align: middle;
  position: relative;
  top: -1px;
  display: inline-block;
  background-repeat: no-repeat;
  background-position: 50%;
  pointer-events none

.pc
  background-image: url('data:image/svg+xml;base64,');
  width: 54px;
  height: 17px;

.ac
  background-image: url('data:image/svg+xml;base64,');
  width: 62px;
  height: 16px;

.mc
  background-image: url('data:image/svg+xml;base64,');
  width: 70px;
  height: 18px;

textarea
  height 4.5em

textarea,
input[type='number']
  outline none
  border 1px solid rgba(0,0,0,.2)
  padding .3em .5em

  &:focus
    border 1px solid #ffdb4d

input[type='number']
  width 60px
  font-size 13px

input[type='submit']
  display inline-block
  overflow visible
  box-sizing border-box
  margin 0
  padding 0 15px
  user-select none
  white-space nowrap
  text-decoration none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  background-color #ffdb4d
  outline none
  border none
  border-radius 3px
  height 32px;
  font-size 15px;
  line-height 32px;
  cursor pointer
  transition: background-color .1s ease-out 0s;

  &:active
    background-color #fc0

@media (max-width: 485px)
  .form,
  .data-unit__label,
  .data-unit__base
    width auto

  .comment .data-unit__label
    display block

  .submit .data-unit__label
    display none

  .data-unit__label
    text-align left
    padding-bottom .3em
