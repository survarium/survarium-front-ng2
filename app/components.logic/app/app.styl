@import "../../components.common/variables.styl"

.wf-play-n4-active
    font-family 'Play', sans-serif

.bg
 background url(/assets/survarium_pro_bg.jpg) repeat scroll 50% 0/cover #1e222b
 position fixed
 top 0
 width 100%
 height 100%
 z-index -1

survarium-stats
  font-smoothing antialiased
  display block

  & > sense
    margin 3em 18px 1em

  &, a, a:visited
    color $baseFontColor


$footerHeight = 3em

body
  margin-bottom $footerHeight + 1em

lang-switcher
  float right
  margin-top 10px

footer
  height $footerHeight
  bottom 0
  width 100%
  display block
  box-sizing border-box
  padding-top 1em
  position absolute
  left 0

.panes
  &__wrap
    position fixed
    z-index 999
    top 0
    left 0
    width 100%
    height 60px
    overflow-y hidden
    background #2a333e
    box-shadow 0 0 10px rgba(0, 0, 0, .5)

  &__tabs
    display block

    box-sizing border-box
    height 100%
    min-width $minWidth
    max-width $maxWidth
    margin 0 auto

    overflow-y hidden
    white-space nowrap

    &::after
      content ''
      display table
      clear both

  &__body
    position relative
    display block
    margin-top 60px

    & ~ *
      padding 0 18px
      max-width 2200px
      margin 0 auto
      display block

  &__pane
    margin-top 60px
    padding-top 20px

  &__tab
    font-size 13px
    font-weight 500
    line-height 60px

    position relative

    display inline-block

    min-width 50px
    height 60px

    transition color .25s, background .25s
    vertical-align top
    text-decoration none
    text-transform uppercase

    color hsla(0, 0%, 96%, .5)

    &_r
      float right
      padding-top .7em

    &_r &_link
      width 40px
      height 40px


    &_link
      display block

      box-sizing border-box
      width 100%
      height 100%
      padding 0 $padLeft

      text-align center
      text-decoration none

      color hsla(0, 0%, 96%, .5)

    &:after
      position absolute
      bottom 0
      left 50%

      width 0
      height 3px

      content ''
      transition .25s

      background hsla(0, 0%, 96%, 0)

    &:hover &_link
    .router-link-active &_link
      color $accent

    &:hover:after
    &.router-link-active:after
      left 0

      width 100%

      background $highlight

.displayFlex
  display flex
  flex-wrap wrap

twitter
  margin 2em auto !important

discord
  margin 2em auto !important

facebook
  margin 2em auto !important

.pad
  padding 0 $padLeft
  max-width 2200px
  margin 0 auto

.fb_sv_pro
  background url(/assets/fb.svg) no-repeat 50% 50%/cover

.vk_sv_pro
  background url(/assets/vk.svg) no-repeat 50% 50%/cover

.discord_channel
  background url(https://discordapp.com/assets/f8389ca1a741a115313bede9ac02e2c0.svg) no-repeat 50% 50%/cover

.steam_group
  background url(https://steamcdn-a.akamaihd.net/steamcommunity/public/assets/friends_announce/btnlogo_steam.png) no-repeat 50% 50%/contain

.blocked router-outlet
  & + * >  * + * + * ~ *:not(.sns)
    display none

.blocked .sns .preloader span
  color $highlight
  font-weight 700

  border 2px solid $highlight

