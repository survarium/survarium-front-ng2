@import "../../components.common/variables.styl"

:host
  display block

.current
  color $highlight
  text-decoration none !important

.label
  display inline-block
  font-size 1em
  padding 0
  margin 0

ul
  list-style-type none
  padding 0
  margin 0
  display inline-block

li
  display inline-block

.leveling li,
.versions li,
.filters li
  cursor pointer
  text-decoration underline
  padding .3em .5em

.items
  margin .5em auto

.item
  border 1px solid $bgLighter
  padding .3em .5em
  width 200px
  display inline-block
  vertical-align top

.outdated
  padding .5em 1em
  margin-bottom .83em

  color #fff
  background-color rgba(240, 0, 0, .8)

  border-radius 4px
  border 1px solid #f00
