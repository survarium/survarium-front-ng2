@import "../../components.common/variables.styl"

:host
  padding-top 1em

.current
  color $highlight
  text-decoration none !important

.label
  display inline-block
  font-size 1em
  padding 0
  margin 0

ul
  list-style-type none
  padding 0
  margin 0
  display inline-block

li
  display inline-block

.leveling li,
.versions li,
.filters li
  cursor pointer
  text-decoration underline
  padding .3em .5em

.items
  display flex
  align-content flex-start
  flex-flow row wrap
  justify-content space-between

.item
  border 1px solid $bgLighter
  padding .3em .5em
  flex 1
  min-width 200px

.desc
  font-size .8em
  padding .5em 0

.premium .level
  color $highlight

.name
  font-size 1.2em
  .level
    float right
    font-size .6em
    line-height 2.44em
    font-weight 400

dt
  display inline-block
  &::after
    content ': '

dd
  margin-left 0
  display inline-block
