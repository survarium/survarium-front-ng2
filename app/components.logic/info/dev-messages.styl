@import "../../components.common/variables.styl"

a
  margin-right 1em

.message
  padding .85em 1em
  border-bottom 1px solid $bgLight
  &:hover
    background-color $bgLight

.author
  color $highlight
  text-decoration none

.date
  position relative
  &::after
    position absolute
    right -1.25em
    content '>>'

.crumbs
  a
    display inline-block
    padding-top .3em
    padding-bottom .3em
    position relative
    font-size .9em
    &:not(:last-of-type)
      &::after
        content '>'
        position absolute
        right -.75em

.text
  padding-top .5em

.telegram
  padding 1em
  background-color $bgLight

.footer
  display block
  padding 1em 0

:host
  cite
    display block

  blockquote
    margin-left 2vw
    margin-right 3vw
